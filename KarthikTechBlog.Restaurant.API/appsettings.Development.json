{
  "AppSettings": {
    "ApplicationName": "KarthikTechBlogRestaurantAPI"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.RollingFile",
      "Serilog.Sinks.ColoredConsole"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          
          "pathFormat": "c:\\log\\KarthikTechBlog-log-{Date}.log"
        }
      },
      {
        "Name": "ColoredConsole"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "KarthikTechBlog.Restaurant.API",
      "Environment": "Development"
    }
  },
  "ConnectionStrings": {
    "DbContext": "Server=tcp:learnsmartcoding.database.windows.net,1433;Initial Catalog=restaurant;Persist Security Info=False;User ID=learnsmartcoding;Password=StrongPassword@321;MultipleActiveResultSets=True;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  }
}
